{
  "name": "crop-backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "biome check --write",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run dist/server.js",
    "codegen": "graphql-codegen --config codegen.ts && bun scripts/post-codegen.ts",
    "seed": "bun run prisma/seed.ts",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@faker-js/faker": "^10.1.0",
    "@graphql-codegen/add": "^6.0.0",
    "@graphql-codegen/typed-document-node": "^6.1.5",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-urql": "^4.0.1",
    "@rcmade/hono-docs": "^1.0.31",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0",
    "@repo/biome-config": "workspace:^"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^6.1.0",
    "@pothos/core": "^4.10.1",
    "@pothos/plugin-prisma": "^4.14.1",
    "@pothos/plugin-scope-auth": "^4.1.6",
    "@pothos/plugin-validation": "^4.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@scalar/hono-api-reference": "^0.9.30",
    "@whatwg-node/server-plugin-cookies": "^1.0.5",
    "better-auth": "^1.4.9",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-yoga": "^5.18.0",
    "hono": "^4.11.3",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "urql": "^5.0.1",
    "zod": "^4.2.1"
  }
}
